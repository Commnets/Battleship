<?xml version="1.0"?>
<GUISystems>

	<!-- Standard main menu used in selection game states -->
	<GUISystem id="10000" main="10001">
		<!-- The main widget has to be a composite (type 0)
			 to allow  the reference to other widgets -->
		<Widget id="10001" type="0" position="10,10,0">
			<RefWidget id="10002"/>
			<RefWidget id="10003"/>	
			<RefWidget id="10004"/>	
			<RefWidget id="10005"/>	
			<RefWidget id="10006"/>	
			<RefWidget id="10007"/>	
			<RefWidget id="10008"/>	
			<RefWidget id="10009"/>	
		</Widget>

		<!-- Option 1: To start the game -->
		<Widget id="10002" type="1" position="0,0,0">
			<Attributes>
				<Attribute id="Form" value="20021"/>
				<Attribute id="BaseChr" value="32"/>
				<Attribute id="AlphaOn" value="255"/>
				<Attribute id="AlphaOff" value="255"/>
				<Attribute id="PixelsAmong" value="0"/>
				<Attribute id="Direction" value="HORIZONTALRIGHT"/>
				<Attribute id="Text" value="Start the game"/>
			</Attributes>
		</Widget>
		
		<!-- Option 2: To load the last game  -->
		<Widget id="10003" type="1" position="0,50,0">
			<Attributes>
				<Attribute id="Form" value="20021"/>
				<Attribute id="BaseChr" value="32"/>
				<Attribute id="AlphaOn" value="255"/>
				<Attribute id="AlphaOff" value="255"/>
				<Attribute id="PixelsAmong" value="0"/>
				<Attribute id="Direction" value="HORIZONTALRIGHT"/>
				<Attribute id="Text" value="Load last game"/>
			</Attributes>
		</Widget>
		
		<!-- Option 3: To introduce the number of players -->
		<Widget id="10004" type="2" position="0,100,0">
			<Attributes>
				<Attribute id="Form" value="20021"/>
				<Attribute id="BaseChr" value="32"/>
				<Attribute id="AlphaOn" value="255"/>
				<Attribute id="AlphaOff" value="255"/>
				<Attribute id="PixelsAmong" value="0"/>
				<Attribute id="Chars" value="1"/>
				<Attribute id="Mask" value="9"/>
				<Attribute id="CursorColor" value="150,150,150,255"/>
				<Attribute id="Location" value="RIGHT"/>
				<Attribute id="Text" value="Number of players: "/>
			</Attributes>
		</Widget>
		
		<!-- Option 4: To select the type of control used to manage the game  -->
		<Widget id="10005" type="3" position="0,150,0">
			<Attributes>
				<Attribute id="Form" value="20021"/>
				<Attribute id="BaseChr" value="32"/>
				<Attribute id="AlphaOn" value="255"/>
				<Attribute id="AlphaOff" value="255"/>
				<Attribute id="PixelsAmong" value="0"/>
				<Attribute id="Direction" value="HORIZONTALRIGHT"/>
				<Attribute id="StringValues" value="Joystick,Keyboard"/>
				<Attribute id="Text" value="Joystick"/>
			</Attributes>
		</Widget>
		
		<!-- Option 5: To select the difficulty of the game  -->
		<Widget id="10006" type="3" position="0,200,0">
			<Attributes>
				<Attribute id="Form" value="20021"/>
				<Attribute id="BaseChr" value="32"/>
				<Attribute id="AlphaOn" value="255"/>
				<Attribute id="AlphaOff" value="255"/>
				<Attribute id="PixelsAmong" value="0"/>
				<Attribute id="Direction" value="HORIZONTALRIGHT"/>
				<Attribute id="StringValues" value="Easy,Medium,Difficult"/>
				<Attribute id="Text" value="Easy"/>
			</Attributes>
		</Widget>
		
		<!-- Option 6: To determinate whether the music is on or off  -->
		<Widget id="10007" type="3" position="0,250,0">
			<Attributes>
				<Attribute id="Form" value="20021"/>
				<Attribute id="BaseChr" value="32"/>
				<Attribute id="AlphaOn" value="255"/>
				<Attribute id="AlphaOff" value="255"/>
				<Attribute id="PixelsAmong" value="0"/>
				<Attribute id="Direction" value="HORIZONTALRIGHT"/>
				<Attribute id="StringValues" value="Music On,Music Off"/>
				<Attribute id="Text" value="Music On"/>
			</Attributes>
		</Widget>
		
		<!-- Option 7: Hall of fame -->
		<Widget id="10008" type="1" position="0,300,0">
			<Attributes>
				<Attribute id="Form" value="20021"/>
				<Attribute id="BaseChr" value="32"/>
				<Attribute id="AlphaOn" value="255"/>
				<Attribute id="AlphaOff" value="255"/>
				<Attribute id="PixelsAmong" value="0"/>
				<Attribute id="Direction" value="HORIZONTALRIGHT"/>
				<Attribute id="Text" value="Hall of fame"/>
			</Attributes>
		</Widget>
		
		<!-- Option 8: Exit -->
		<Widget id="10009" type="1" position="0,350,0">
			<Attributes>
				<Attribute id="Form" value="20021"/>
				<Attribute id="BaseChr" value="32"/>
				<Attribute id="AlphaOn" value="255"/>
				<Attribute id="AlphaOff" value="255"/>
				<Attribute id="PixelsAmong" value="0"/>
				<Attribute id="Direction" value="HORIZONTALRIGHT"/>
				<Attribute id="Text" value="Exit"/>
			</Attributes>
		</Widget>
	</GUISystem>
	
</GUISystems>